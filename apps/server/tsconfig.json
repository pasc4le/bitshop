{
	"extends": "tsconfig/base.json",
	"compilerOptions": {
		/* Modules */
		"module": "commonjs",
		"baseUrl": "./src",
		"moduleResolution": "nodenext",
		"paths": {
			"~*": ["./*"]
		},

		/* Emit */
		// Look at tsup

		/* Interop Constraints */
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,

		/* Type Checking */
		"strict": true,

		/* Completeness */
		"skipLibCheck": true
	}
}
